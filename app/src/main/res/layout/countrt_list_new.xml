<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="140dp"
    android:orientation="vertical"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:orientation="vertical">


        <LinearLayout
            android:background="#C94A6D86"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivCountryFlag"
                android:layout_width="60dp"
                android:layout_height="40dp"
                tools:srcCompat="@tools:sample/avatars" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCountryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="India"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffff"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Confirmed"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="2dp"
                android:textColor="@color/colorPrimary"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Dead"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="2dp"
                android:textColor="@color/colorTotalDeaths"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Recovered"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="2dp"
                android:textColor="@color/notificationInfo"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAffected"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="12412520"
                android:textAppearance="?android:attr/textAppearance"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="2dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDead"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="2541202520"
                android:textAppearance="?android:attr/textAppearance"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="2dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRecovered"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="1574585"
                android:textAppearance="?android:attr/textAppearance"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="2dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:background="#F1EEEE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="New Cases"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="2dp"
                android:textColor="@color/colorPrimary"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="New Death"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="2dp"
                android:textColor="@color/colorTotalDeaths"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="2dp"
                android:textColor="@color/notificationInfo"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/todaysAffected"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="12412520"
                android:textAppearance="?android:attr/textAppearance"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="2dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/todaysDeath"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="2541202520"
                android:textAppearance="?android:attr/textAppearance"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="2dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="1574585"
                android:textAppearance="?android:attr/textAppearance"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="2dp"/>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>